    <script src="vendor/bootstrap/js/jquery.js"></script>
    <script>
      /**
       * Task: insert projects into one of the rows randomly
       */

      var rows = $('#project_list .row');
      var projects = $('#project_list .row .col').toArray();

      $('#project_list .col').remove();

      var i = 0;
      while (projects.length {
        if ( i>= 20 ) break;

        console.log(i);
        console.log(projects);
        console.log();

        var numRow = Math.floor(i++/3);
        var randomProjIndex = Math.floor(Math.random()*projects.length);
        $(rows[numRow]).append($(projects[randomProjIndex]).clone());
        delete projects[randomProjIndex];
      }
    </script>
